    <script>
      var mealValue = "<%= item.meal %>".trim();
      var selectElement = document.getElementById("meal");
  
      for (var i = 0; i < selectElement.options.length; i++) {
          if (selectElement.options[i].value === mealValue) {
              selectElement.options[i].selected = true;
              break;
          }
      }
