      <%# Form start %>
      <div class="container">
        <h1>Edit Recipe</h1>
        <div class="row">
          <div class="col">
            <form id="reg-form" enctype="multipart/form-data">
              <div class="form-group row">
                <label for="name" class="col-sm-2 col-form-label">Recipe Name:</label>
                <div class="col-sm-10">
                  <input type="text" value="<%=item.name%>" class="form-control" name="name" id="name" autocomplete="off" placeholder="Recipe Name">
                </div>
              </div><br>
      
              <div class="form-group row">
                <label for="image" class="col-sm-2 col-form-label">Image:</label>
                <div class="col-sm-10">
                  <input type="file" class="form-control-file" name="image" id="image" onchange="loadFile(event)">
                  <img src="../<%=item.image%>" id="output"/>
                </div>
              </div><br>
      
              <div class="form-group row">
                <label for="meal" class="col-sm-2 col-form-label">Meal Type:</label>
                <div class="col-sm-10">
                  <select class="form-control" id="meal" name="meal">
                    <option></option>
                    <option value="breakfast">breakfast</option>
                    <option value="lunch">lunch</option>
                    <option value="dinner">dinner</option>
                    <option value="dessert">dessert</option>
                    <option value="drinks">drinks</option>
                  </select>
                </div>
              </div>
      
              <div class="form-group row">
                <label for="steps" class="col-sm-2 col-form-label">Steps:</label>
                <div class="col-sm-8">
                  <input type="text" class="form-control" name="steps" id="steps" autocomplete="off" placeholder="New step">
                </div>
                <div class="col-sm-2">
                  <button type="button" class="btn btn-secondary" onclick="addSteps()">Add Step</button>
                </div>
              </div>

              <br><div class="row">
                <div class="col-sm-1"></div>
                <div id="whereStepsGo" class="col-sm-10">

                  <% steps.forEach((step, index) => { %>
                    <div class='stepList' id='list<%= index + 1 %>'> 
                        <div id='step<%= index + 1 %>'>
                            <span class='stepText'>
                                <p><%= index + 1 %>) <%= step %></p>
                            </span>
                            <span class='deleteButton'>
                                <button class='button' onclick="deleteStep('<%= index + 1 %>')">X</button> 
                            </span>
                        </div>
                    </div>
                  <% }) %>

                </div>
                <div class="col-sm-1"></div>
              </div><br>
      
              <input type="submit" class="btn btn-secondary" value="Edit">&nbsp;&nbsp;
              <button class="btn btn-secondary deletedButton" onclick="deleteButton()" type="button">Delete</span></button>
            </form>
          </div>
        </div>
      </div>
      <%# Form end %>

